<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical" 
    android:background="@color/btnbg"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/l1_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center_vertical"
         android:background="@drawable/selector1"
         android:layout_weight="1"
         android:clickable="true"
         >
        <ImageView
            android:id="@+id/l1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logosina"
             android:layout_weight="1"/>
        <TextView
            android:id="@+id/l1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到新浪微博"
            android:textColor="@android:color/background_dark"
             android:layout_weight="2"/>
    </LinearLayout>
    
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />
    <LinearLayout
        android:id="@+id/l2_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:gravity="center_vertical"
         android:background="@drawable/selector1"
         android:layout_weight="1"
         android:clickable="true">
        <ImageView
            android:id="@+id/l2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logorenren"
             android:layout_weight="1"/>
        <TextView
            android:id="@+id/l2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到人人网"
            android:textColor="@android:color/background_dark"
             android:layout_weight="2"/>
    </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />
   <LinearLayout
        android:id="@+id/l3_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:gravity="center_vertical|center_horizontal"
         android:background="@drawable/selector1"
         android:layout_weight="1"
         android:clickable="true">
        <TextView
            android:id="@+id/l3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="通过其他方式分享" />        
    </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />    
   <LinearLayout 
        android:id="@+id/l4_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/selector1"
        android:layout_weight="3"
        android:clickable="true">
   <Button 
       android:id="@+id/cancel_share"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/selector1"
       android:text="取消"/>       
       
   </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />

</LinearLayout>