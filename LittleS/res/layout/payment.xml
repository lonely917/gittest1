<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/mainclolor">
    
    <RelativeLayout
        android:id="@+id/title_payment"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付宝支付"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/payText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_payment"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        android:textSize="20dip"
        android:text="校验码已发送至手机"/>
	<EditText 
	    android:id="@+id/checkEdit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="付款校验码"
	    android:singleLine="true"
	    android:ems="10"
	    android:layout_below="@+id/payText"
	    android:layout_marginTop="20dp"
	    android:layout_centerHorizontal="true"
	    />
	<EditText 
	    android:id="@+id/passwordEdit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="支付宝密码"
	    android:singleLine="true"
	    android:ems="10"
	    android:layout_below="@+id/checkEdit"
	    android:layout_marginTop="10dp"
	    android:layout_centerHorizontal="true"
	    android:password="true"/>

	<Button
	    android:id="@+id/buttonconfirm"
	    android:layout_width="100dp"
	    android:layout_height="50dp"
	    android:layout_below="@+id/passwordEdit"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="134dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:background="@drawable/selector_btn"
	    android:text="确定" />

</RelativeLayout>