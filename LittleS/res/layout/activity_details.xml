<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_marginBottom="50dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="特产详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <LinearLayout 
    	android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:orientation="vertical"
    >
    	<ImageView 
    		android:id="@+id/Page2_2_detail_img"
    		android:layout_width="match_parent"
   			android:layout_height="match_parent"
   			android:layout_weight="0.5"
   			android:src="@drawable/tab_weixin_pressed"
   			android:scaleType="fitXY"
    	/>
    	
    	<LinearLayout 
    		android:layout_width="match_parent"
   			android:layout_height="match_parent"
   			android:orientation="vertical"
   			android:paddingLeft="15.0dip"
   			android:layout_weight="0.5"
   			android:background="#FFF"
    	>
    	
    	<LinearLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    	>
	    	<TextView 
	    		android:id="@+id/Page2_2_detail_price"
	    		android:text="价格："
	    		style="@style/popupwindow_text"
	    		android:textSize="16sp"
	    		android:layout_marginTop="15.0dip"
	    	/>
	    	<RelativeLayout 
		    	android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:gravity="right"
	    	>
	    		<TextView 
	    			android:clickable="true"
		    		android:id="@+id/Page2_2_detail_add_to_basket"
		    		android:text="加入购物车"
		    		android:layout_marginRight="10.0dip"
		    		style="@style/popupwindow_text"
		    		android:textSize="16sp"
		    		android:textColor="#FFF"
		    		android:gravity="center_vertical"
		    		android:background="@drawable/detail_btn_style"
		    		android:layout_marginTop="15.0dip"
	    	/>
	    	</RelativeLayout>
	    	
    	</LinearLayout>
    	<TextView
    		android:id="@+id/Page2_2_detail_name"
    		android:text="名称："
    		style="@style/popupwindow_text"
    		android:textSize="16sp"
    		
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_detail_brand"
    		android:text="品牌："
    		style="@style/popupwindow_text"
    		android:textSize="16sp"
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_detail_intro"
    		android:text="简介："
    		style="@style/popupwindow_text"
    		android:textSize="16sp"
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_detail_size"
    		android:text="规格："
    		style="@style/popupwindow_text"
    		android:textSize="16sp"
    	/>
    	<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    	>
    		<TextView 
    			android:id="@+id/Page2_2_detail_times"
	    		android:text="购买次数："
    			style="@style/popupwindow_text"
    			android:textSize="16sp"
    		/>
    		
    		<TextView 
    			android:id="@+id/Page2_2_detail_times_num"
	    		android:text=""
    			style="@style/popupwindow_text"
    			android:textColor="@color/LogMainColor"
    			android:textSize="16sp"
    		/>
    	</LinearLayout>
    	
    	
    	<TextView 
    		android:id="@+id/Page2_2_detail_rank"
    		android:text="被赞过：3800次"
    		style="@style/popupwindow_text"
    		android:textSize="16sp"
    	/>
    	
    	<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    	>
    		<TextView 
	    		android:text="详情评价："
    			style="@style/popupwindow_text"
    			android:textSize="16sp"
    		/>
    		
    		<TextView 
	    		android:text="很具有名族特殊，送给女朋友，她很喜欢，值得推荐。大爱，回来后姐妹都很喜欢，又订了好多条"
    			style="@style/popupwindow_text"
    			android:background="@drawable/detail_back_style_1"
    			android:textSize="12sp"
    		/>
    	</LinearLayout>
    	
    	</LinearLayout><!-- 底部结束 -->
    </LinearLayout>

</LinearLayout>
