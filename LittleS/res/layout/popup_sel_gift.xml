<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/popup_back_style"
  >
  <LinearLayout 
  		android:layout_width="match_parent"
  		android:layout_height="match_parent"
    	android:padding="10.0dip"
  >
  
    <LinearLayout 
    	android:layout_width="match_parent"
  		android:layout_height="match_parent"
    	android:orientation="horizontal"
    >
    	<LinearLayout
    		android:layout_height="match_parent"
	    	android:layout_width="wrap_content"
    	>
		    <ImageView 
		    	android:id="@+id/Page2_2_popup_img"
		    	android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:src="@drawable/tab1"
		    />
    	</LinearLayout>
    
    <LinearLayout 
    	android:layout_height="match_parent"
    	android:layout_width="match_parent"
    	android:orientation="vertical"
    	android:layout_marginLeft="10.0dip"
    >
    	<TextView
    		android:id="@+id/Page2_2_popup_name"
    		android:text="名称："
    		style="@style/popupwindow_text"
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_popup_brand"
    		android:text="品牌："
    		style="@style/popupwindow_text"
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_popup_intro"
    		android:text="简介："
    		style="@style/popupwindow_text"
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_popup_size"
    		android:text="规格："
    		style="@style/popupwindow_text"
    	/>
    	<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    	>
    		<TextView 
    			android:id="@+id/Page2_2_popup_times"
	    		android:text="购买次数："
    			style="@style/popupwindow_text"
    		/>
    		
    		<TextView 
    			android:id="@+id/Page2_2_popup_times_num"
	    		android:text=""
    			style="@style/popupwindow_text"
    			android:textColor="@color/LogMainColor"
    		/>
    	</LinearLayout>
    	
    	
    	<TextView 
    		android:id="@+id/Page2_2_popup_rank"
    		android:text="商品等级："
    		style="@style/popupwindow_text"
    	/>
    	
    	<TextView 
    		android:id="@+id/Page2_2_popup_price"
    		android:text="价格："
    		style="@style/popupwindow_text"
    	/>
    	<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    	>
	    	<TextView 
	    		android:id="@+id/Page2_2_popup_recommend"
	    		android:text="推荐指数："
	    		style="@style/popupwindow_text"
	    	/>
	    	<LinearLayout 
	    		android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center_vertical"
	    	>
	    		<ImageView 
	    			android:visibility="invisible"
		    		android:id="@+id/Page2_2_popup_recommend_1"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginLeft="5.0dip"
	    			android:layout_marginRight="5.0dip"
	    			android:src="@drawable/page_indicator_focused"
	    			style="@style/popupwindow_text"
	    		/>
	    		
	    		<ImageView 
	    			android:visibility="invisible"
		    		android:id="@+id/Page2_2_popup_recommend_2"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginLeft="5.0dip"
	    			android:layout_marginRight="5.0dip"
	    			android:src="@drawable/page_indicator_focused"
	    			style="@style/popupwindow_text"
	    		/>
	    		
	    		<ImageView 
	    			android:visibility="invisible"
		    		android:id="@+id/Page2_2_popup_recommend_3"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginLeft="5.0dip"
	    			android:layout_marginRight="5.0dip"
	    			android:src="@drawable/page_indicator_focused"
	    			style="@style/popupwindow_text"
	    		/>
	    		
	    		<ImageView 
	    			android:visibility="invisible"
		    		android:id="@+id/Page2_2_popup_recommend_4"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginLeft="5.0dip"
	    			android:layout_marginRight="5.0dip"
	    			android:src="@drawable/page_indicator_focused"
	    			style="@style/popupwindow_text"
	    		/>
	    		
	    		<ImageView 
	    			android:visibility="invisible"
		    		android:id="@+id/Page2_2_popup_recommend_5"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginLeft="5.0dip"
	    			android:layout_marginRight="5.0dip"
	    			android:src="@drawable/page_indicator_focused"
	    			style="@style/popupwindow_text"
	    		/>
	    	</LinearLayout>
	    	
    	</LinearLayout>
    	
    	<TextView 
    		android:id="@+id/Page2_2_popup_details"
    		android:clickable="true"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:text="查看详情"
    		android:textColor="@drawable/popup_textview_style"
    		android:layout_marginTop="60.0dip"
    		android:layout_gravity="right"
    		android:gravity="right"
    	/>
    </LinearLayout><!-- 右边信息 -->
    
    
	</LinearLayout><!-- 整个中央部分 -->
	
</LinearLayout><!-- 整个LinearLayout -->
</LinearLayout>
